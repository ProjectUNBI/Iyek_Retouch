<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Seperator"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/seperator"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp"/>
    </LinearLayout>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:dragEdge="right"
        app:mode="normal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/isIyekIngPating"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/fbutton_color_concreteColour"
                android:gravity="center"
                android:onClick="IyekEngPasteEnable"
                android:text="Enable"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/isIyekisFirst"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/fbutton_color_asbestosColour"
                android:gravity="center"
                android:onClick="IyekFirst"
                android:text="Eyek+Eng"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fbutton_color_clouds"
            android:onClick="layout2OnClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Iyek-English Conversion" />
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:dragEdge="right"
        app:mode="normal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customEnbaleTextveiw"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="customWordEnable"
                android:text="Disable"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/fbutton_color_asbestosColour"
                android:gravity="center"
                android:onClick="CustomWordPage"
                android:text="Words"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fbutton_color_clouds"
            android:onClick="layoutOneOnClick"
            android:paddingLeft="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Custom Words" />
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:id="@+id/swipe_layout_3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:dragEdge="right"
            app:mode="normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phonicEnbaleTextveiw"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:onClick="phonicWordEnable"
                    android:text="Disable"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@color/fbutton_color_asbestosColour"
                    android:gravity="center"
                    android:onClick="phonicWord"
                    android:text="Phonic Sep"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fbutton_color_clouds"
                android:onClick="layoutOneOnClick"
                android:paddingLeft="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Phonic" />
            </FrameLayout>
        </com.chauthai.swipereveallayout.SwipeRevealLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Shake sensitivity:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:bsb_bubble_color="@color/color_red_light"
        app:bsb_bubble_text_color="@color/colorPrimaryDark"
        app:bsb_max="100"
        app:bsb_min="0"
        app:bsb_progress="50"
        app:bsb_hide_bubble="true"
        app:bsb_second_track_color="@color/color_red"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_progress_in_float="true"
        app:bsb_track_color="@color/color_red_light" />

    <info.hoang8f.widget.FButton
        android:id="@+id/IyekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="00dp"
        android:drawablePadding="0dp"
        android:minWidth="250dp"
        android:minHeight="80dp"
        android:onClick="ClickOnIyek"
        android:paddingLeft="20dp"
        android:paddingTop="-5dp"
        android:paddingRight="20dp"
        android:text="Iyek"
        android:textColor="@color/fbutton_color_alizarinColour"
        app:cornerRadius="25dp"
        app:shadowColor="@color/fbutton_color_peter_riverColourColour"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Maximum Word:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="0dp">

            <info.hoang8f.widget.FButton
                android:id="@+id/success_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|top"
                android:layout_margin="10dp"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:onClick="PlusButton"
                android:text="+"
                android:textColor="@android:color/white"
                app:fButtonColor="@color/fbutton_color_nephritis"
                app:shadowEnabled="true" />

            <TextView
                android:id="@+id/wordnumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0" />

            <info.hoang8f.widget.FButton
                android:id="@+id/warning_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:onClick="MinusButton"
                android:text="-"
                android:textColor="@android:color/white"
                app:fButtonColor="@color/fbutton_color_carrotColour"
                app:shadowEnabled="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>